<div class='container'>
  {{custom-html "top"}}
  {{global-notice}}
  {{discourse-banner user=currentUser banner=site.banner}}
</div>

<div class='list-controls'>
  <div class="container">
    {{outlet "navigation-bar"}}
  </div>
</div>

{{conditional-loading-spinner condition=loading}}

<div {{bind-attr class=":with-sidebar :container :list-container loading:hidden"}}>
  <div class="row">
    <div class="full-width">
      <div id='header-list-area'>
        {{outlet "header-list-container"}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="full-width">
      <div id='list-area'>
        {{plugin-outlet "discovery-list-container-top"}}
        {{outlet "list-container"}}
      </div>
    </div>
  </div>
</div>

<!-- plugin content -->
  {{#if currentUser}}
    <div class='sidebar babble-sidebar'>
      {{babble-chat}}
    </div>
  {{/if}}
<!-- /plugin content -->
